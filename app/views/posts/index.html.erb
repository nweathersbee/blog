<div class="container">

  <div id="root"></div>

  <h1>Blog Posts</h1>

  <p id="notice"><%= notice %></p>

  <table class="table table-striped table-hover table-bordered">
    <tr align="left">
      <th class="bg-primary">Title</th>
      <th class="bg-success">Author</th>
      <th class="bg-warning">Created/Updated</th>
      <th class="bg-danger">Actions</th>
      <th class="bg-danger"></th>
      <th class="bg-danger"></th>
    </tr>
    <% @posts.each do |post| %>
      <tr>
        <td><strong><%= post.title %></strong></td>
        <td><%= post.author.name %></td>
        <td>
          <small><%= post.updated_at.strftime("%l:%M%p %m/%d/%Y") %></small>
        </td>
        <td><%= link_to 'Show', post_path(post) %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Delete', post_path(post),
          method: :delete,
          data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </table>

  <div style="padding-top: 20px"><%= link_to 'New Post', new_post_path %></div>
</div>
